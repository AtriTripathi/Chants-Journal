<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/status_bg</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/status_bg</item>
        <item name="colorAccent">@color/trans_black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@color/alternate_orange</item>
        <!--<item name="android:padding">2dp</item>-->
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorError">@color/black</item>
    </style>

    <style name="HelpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/status_bg</item>
        <item name="colorAccent">@color/trans_black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@color/alternate_orange</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/trans_white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorError">@color/black</item>
        <item name="android:radius">16dp</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="MantraDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">#000000</item>
        <item name="android:cursorVisible">true</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="dialogTheme">@color/secondaryDarkColor</item>
    </style>

    <!--Floating label text style-->
    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/et_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MantraEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/et_black</item>
        <item name="colorControlActivated">@color/et_black</item>
    </style>



    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
