<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/status_bg</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="MantraDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">#000000</item>
        <item name="android:cursorVisible">true</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="dialogTheme">@color/secondaryDarkColor</item>
    </style>

    <!--Floating label text style-->
    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/et_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MantraEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/et_black</item>
        <item name="colorControlActivated">@color/et_black</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ff6d00</item>
        <item name="colorControlActivated">@color/alternate_orange</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
