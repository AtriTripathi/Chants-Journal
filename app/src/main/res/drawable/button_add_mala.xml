<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_orange">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/et_black" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="oval">

            <stroke
                android:width="3dp"
                android:color="@color/et_black" />

            <gradient
                android:angle="135"
                android:endColor="@color/aplha_orange"
                android:startColor="@color/aplha_orange"
                android:centerColor="@color/primaryDarkColor"
                android:type="linear" />
        </shape>
    </item>
</ripple>